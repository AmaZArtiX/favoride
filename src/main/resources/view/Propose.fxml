<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="600.0" maxWidth="650.0" minHeight="600.0" minWidth="650.0" prefHeight="600.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.favoride.presentation.ProposeController">
   <children>
      <VBox layoutX="88.0" layoutY="90.0" prefHeight="420.0" prefWidth="475.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Proposer un trajet">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="61.0" prefWidth="422.0">
               <children>
                  <TextField fx:id="lblDeparture" promptText="Départ" />
                  <TextField fx:id="lblArrival" promptText="Arrivée">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="56.0" prefWidth="422.0">
               <children>
                  <DatePicker fx:id="datePicker" prefHeight="27.0" prefWidth="177.0" />
                  <ComboBox fx:id="cbHours" prefHeight="27.0" prefWidth="67.0">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </ComboBox>
                  <ComboBox fx:id="cbMinutes" prefHeight="27.0" prefWidth="67.0">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </ComboBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="422.0">
               <children>
                  <Label text="Nombre de places à bord" />
                  <Spinner fx:id="seatsSpinner" prefHeight="27.0" prefWidth="95.0">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Spinner>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="57.0" prefWidth="422.0">
               <children>
                  <Label text="Prix de la course" />
                  <Spinner fx:id="rateSpinner" prefHeight="27.0" prefWidth="96.0">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Spinner>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="39.0" prefWidth="422.0">
               <children>
                  <Label fx:id="lblStatus" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="56.0" prefWidth="422.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#sendJourney" text="Envoyer" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
